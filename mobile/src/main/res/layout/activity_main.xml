<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.example.wearablesensordata.MainMobileActivity">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/title_main_activity_1"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/rounded_rectangle"
                app:tint="#4CC9F0" />

            <TextView
                android:id="@+id/title_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="@string/sensor"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- Lines divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/title_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/title_main_activity_2"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

    </com.google.android.flexbox.FlexboxLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/device_connected_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flexboxLayout">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="17dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/smartwatch"
            app:layout_constraintBottom_toBottomOf="@+id/device_connected_textview"
            app:layout_constraintEnd_toStartOf="@+id/device_connected_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/device_connected_textview"
            app:tint="#57BF9C" />

        <TextView
            android:id="@+id/device_connected_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device connected"
            android:textColor="#57BF9C"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

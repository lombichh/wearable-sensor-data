<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wearablesensordata.MainMobileActivity">

    <ScrollView
        android:id="@+id/dashboard_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexboxLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:alignItems="center"
                app:flexWrap="wrap"
                app:justifyContent="center">

                <TextView
                    android:id="@+id/title_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:includeFontPadding="false"
                    android:text="@string/title_main_activity_1"
                    android:textColor="@android:color/black"
                    android:textSize="32sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/rounded_rectangle"
                        app:tint="@color/teal" />

                    <TextView
                        android:id="@+id/title_textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:includeFontPadding="false"
                        android:text="@string/sensor"
                        android:textColor="@android:color/white"
                        android:textSize="32sp" />

                </FrameLayout>

                <!-- Lines divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/title_textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:includeFontPadding="false"
                    android:text="@string/title_main_activity_2"
                    android:textColor="@android:color/black"
                    android:textSize="32sp" />

            </com.google.android.flexbox.FlexboxLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/device_connected_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="17dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/smartwatch"
                    app:layout_constraintBottom_toBottomOf="@+id/device_connected_textview"
                    app:layout_constraintEnd_toStartOf="@+id/device_connected_textview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/device_connected_textview"
                    app:tint="#57BF9C" />

                <TextView
                    android:id="@+id/device_connected_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:textColor="@color/light_green"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/accelerometer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/softly_rounded_rectangle"
                android:backgroundTint="@color/light_blue">

                <TextView
                    android:id="@+id/accelerometer_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sofia_pro_semibold"
                    android:text="@string/accelerometer_title"
                    android:textColor="@color/blue"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/accelerometer_title_textview">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/softly_rounded_rectangle"
                        android:backgroundTint="@color/blue"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/accelerometer_xaxis_value_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/sofia_pro_semibold"
                            android:includeFontPadding="false"
                            android:text="@string/zero"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/accelerometer_xaxis_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sofia_pro_light"
                            android:includeFontPadding="false"
                            android:text="@string/x_axis"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/softly_rounded_rectangle"
                        android:backgroundTint="@color/blue"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/accelerometer_yaxis_value_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/sofia_pro_semibold"
                            android:includeFontPadding="false"
                            android:text="@string/zero"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/accelerometer_yaxis_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sofia_pro_light"
                            android:includeFontPadding="false"
                            android:text="@string/y_axis"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/softly_rounded_rectangle"
                        android:backgroundTint="@color/blue"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/accelerometer_zaxis_value_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/sofia_pro_semibold"
                            android:includeFontPadding="false"
                            android:text="@string/zero"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/accelerometer_zaxis_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sofia_pro_light"
                            android:includeFontPadding="false"
                            android:text="@string/z_axis"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gyroscope_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/softly_rounded_rectangle"
                android:backgroundTint="@color/light_violet">

                <TextView
                    android:id="@+id/gyroscope_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sofia_pro_semibold"
                    android:text="@string/gyroscope_title"
                    android:textColor="@color/violet"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gyroscope_title_textview">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/softly_rounded_rectangle"
                        android:backgroundTint="@color/violet"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/gyroscope_xaxis_value_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/sofia_pro_semibold"
                            android:includeFontPadding="false"
                            android:text="@string/zero"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/gyroscope_xaxis_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sofia_pro_light"
                            android:includeFontPadding="false"
                            android:text="@string/x_axis"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/softly_rounded_rectangle"
                        android:backgroundTint="@color/violet"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/gyroscope_yaxis_value_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/sofia_pro_semibold"
                            android:includeFontPadding="false"
                            android:text="@string/zero"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/gyroscope_yaxis_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sofia_pro_light"
                            android:includeFontPadding="false"
                            android:text="@string/y_axis"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/softly_rounded_rectangle"
                        android:backgroundTint="@color/violet"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/gyroscope_zaxis_value_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/sofia_pro_semibold"
                            android:includeFontPadding="false"
                            android:text="@string/zero"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/gyroscope_zaxis_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sofia_pro_light"
                            android:includeFontPadding="false"
                            android:text="@string/z_axis"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/softly_rounded_rectangle"
                    android:backgroundTint="@color/indigo"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/temperature_value_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/temperature_value_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:fontFamily="@font/sofia_pro_semibold"
                            android:includeFontPadding="false"
                            android:text="@string/zero"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/temperature_unit_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/celsius_degrees"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/temperature_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/temperature"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/softly_rounded_rectangle"
                    android:backgroundTint="@color/bordeaux"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/light_value_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/light_value_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:fontFamily="@font/sofia_pro_semibold"
                            android:includeFontPadding="false"
                            android:text="@string/zero"
                            android:textColor="@android:color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/light_unit_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/lux"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/ligt_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/light"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/checking_paired_wearables_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#DD000000"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/checking_paired_wearables_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/checking_paired_wearables_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/sofia_pro_semibold"
            android:gravity="center"
            android:text="@string/looking_for_paired_wearables"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/connected_device_without_app_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/sofia_pro_semibold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/install_app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/softly_rounded_rectangle"
            android:backgroundTint="@color/teal"
            android:drawableStart="@drawable/smartwatch_drawable_left"
            android:drawableTint="@android:color/white"
            android:fontFamily="@font/sofia_pro_semibold"
            android:foreground="?android:attr/selectableItemBackground"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="@string/install_app"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
